{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,

    /* --- The Critical Fixes --- */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* --- This is the new line --- */
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
