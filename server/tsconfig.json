{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",

    /* The critical fixes */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    /* This prevents the "implicit 'any'" errors */
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}